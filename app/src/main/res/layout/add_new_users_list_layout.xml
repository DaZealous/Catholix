<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feeds_layout_profile_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/users_list_add_new_layout_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:transitionName="profileImg"
                android:id="@+id/add_new_users_list_layout_image_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_person_profile_24dp"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="1dp"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/add_new_users_list_layout_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/add_new_users_list_layout_image_profile"
                android:text="Username"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:src="@drawable/ic_radio_button_unchecked_blue_24dp"
                android:background="@android:color/transparent"
                android:id="@+id/add_new_users_list_layout_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>