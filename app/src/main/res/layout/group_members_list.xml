<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_members_list_layout_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/group_members_list_layout_image_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_person_profile_24dp"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="1dp"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/group_members_list_layout_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/group_members_list_layout_image_profile"
        android:text="Username"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/group_members_list_layout_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_check_circle_blue_24dp"
        android:visibility="invisible" />
</RelativeLayout>