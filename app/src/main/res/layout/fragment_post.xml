<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".PostFragment"
    android:scrollbars="none">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_card_view"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD NEW POST"
        android:fontFamily="@font/luckiestguy"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:alpha="0.7"/>

   <com.google.android.material.textfield.TextInputLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:hintAnimationEnabled="true"
       app:hintEnabled="true"
       app:counterMaxLength="1000"
       app:counterEnabled="true">
       <com.google.android.material.textfield.TextInputEditText
           android:padding="10dp"
           android:id="@+id/fragment_post_edit_text_post"
           android:gravity="top"
           android:textAlignment="inherit"
           android:fontFamily="@font/rokkitt_regular"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:background="@drawable/new_post_edit_text_layout"/>
   </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/post_pick_img_upload_card"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="#e2e2e2"
        app:cardCornerRadius="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/new_post_image_view_feed"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:alpha="0.6">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_a_photo_white_24dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/fragment_post_btn_post"
        android:enabled="false"
        android:alpha="0.6"
        android:paddingEnd="65dp"
        android:paddingStart="85dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:gravity="center"
        android:drawableStart="@drawable/ic_cast_connected_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/post_btn_blue"
        android:text="POST"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"/>

</LinearLayout>
</ScrollView>