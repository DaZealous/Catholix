<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/holy_mary"
    android:orientation="vertical"
    tools:context=".WelcomeActivity">

    <ImageView
        android:transitionName="icon"
        android:layout_gravity="end"
        android:id="@+id/welcome_logo_icon"
        android:layout_margin="24dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@mipmap/app_logo"
        tools:targetApi="lollipop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
    <androidx.viewpager.widget.ViewPager
       android:layout_gravity="center_horizontal"
        android:id="@+id/welcome_viewpager"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_dots_layout"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="80dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/welcome_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_drawable"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

<LinearLayout
    android:id="@+id/welcome_layout_bottom"
    android:padding="10dp"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:background="@drawable/sponsor_icon"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:fontFamily="@font/rokkitt_regular"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Rights Reserved"
        android:layout_marginStart="16dp"/>

    <View
        android:background="#ffffff"
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:fontFamily="@font/rokkitt_regular"
        android:id="@+id/welcome_register"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginStart="10dp"/>
</LinearLayout>
</LinearLayout>